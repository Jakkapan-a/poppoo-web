generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model JA030_User {
  id        Int             @id @default(autoincrement())
  username  String          @unique
  password  String
  status    String?         @default("offline") // online, offline
  score     Int             @default(0)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  tokens    JA030_Token[]
  sockets   JA030_SessionSocket[]
}

model JA030_Token {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      JA030_User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model JA030_SessionSocket {
  id        Int      @id @default(autoincrement())
  socketId  String   @unique
  userId    Int
  user      JA030_User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
